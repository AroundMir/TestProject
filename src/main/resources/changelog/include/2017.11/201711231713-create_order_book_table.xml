<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="201711231713-create_order_book_table" author="Miroslav">
        <comment>
            создание таблицы для связи заказа и книги
        </comment>

        <createTable tableName="order_book" remarks="связь заказа и книги">
            <column name="order_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_book_id" references="order(id)"/>
            </column>
            <column name="book_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_book_order_id" references="book(id)"/>
            </column>
        </createTable>


    </changeSet>

</databaseChangeLog>